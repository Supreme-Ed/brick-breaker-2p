/**
 * TypeScript configuration for Playwright E2E tests
 * 
 * This file configures TypeScript to type-check JavaScript files without emitting output.
 * It enables strict type checking and includes Playwright and Node.js type definitions.
 * Used for providing type safety to our end-to-end tests while keeping them as JavaScript.
 */
{
  "compilerOptions": {
    "target": "ES2016", // Or your desired target
    "module": "CommonJS",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true, // Don't emit JS files, just type check
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": ["@playwright/test", "node"] // Include Playwright and Node types
  },
  "include": [
    "./**/*.js", // Include all JS files in this directory and subdirectories
    "./**/*.ts", // Include all TS files (like our global.d.ts)
    "./global.d.ts" // Explicitly include the global declaration
  ],
  "exclude": [
    "node_modules"
  ]
}
